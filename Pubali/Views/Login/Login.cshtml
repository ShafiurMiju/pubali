@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewData["Title"] = "Login";
}

<div class="vh-100 vw-100" style="">
    <div class="d-flex h-100 w-100" style="">
        <div class="h-100 w-50">
            <div class="h-100 d-flex flex-column justify-content-between align-items-center">
                <div class="mt-50px">
                    <img src="/logo.svg" />
                </div>
                <div>
                    <div>
                        <img src="/LawIcon.svg" />
                    </div>
                    <div>
                        <h1 class="mt-3 text-24 text-center fw-bolder text-252525">Lawsuit Management System</h1>
                        <p class="text-center text-18 text-252525">A common term for a legal action</p>
                    </div>
                </div>
                <div>
                    <p class="text-14 text-252525">©2024 Pubali Bank PLC. All Rights Reserved.</p>
                </div>
            </div>
        </div>
        <div class="bg-success w-50 h-100 d-flex align-items-center">
            <div class="w-60 mx-auto">
                <form class="form-signin w-100 px-20" method="post">
                    <label for="inputEmail" class="sr-only mb-1 text-white">User Name</label>
                    <input type="email" name="email" class="form-control mb-3 text-555555 py-3" placeholder="anisur@pubalibankbd" required autofocus>
                    <label for="inputPassword" class="sr-only mb-1 text-white">Password</label>
                    <input type="password" name="password" class="form-control mb-3 text-555555 py-3" placeholder="************" required>
                    <a href="" class="d-block text-white text-decoration-none text-right">Forgot Password?</a>
                    <button class="btn btn-warning w-100 py-3 text-white fw-bolder mt-3" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>



</div>


