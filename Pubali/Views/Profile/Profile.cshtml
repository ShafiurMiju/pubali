@{
    ViewData["Title"] = "Profile";
}

<div class="position-absolute law w-100">
    <div class="rounded-2 bg-white p-2" style="height: 80vh; overflow:auto; margin-right: 20px;">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <button class="nav-link border-bottom border-success" style="color:#006536; background:none; ">Edit Profile</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" style="color:#006536; background:none; ">Preferance</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" style="color:#006536; background:none; ">Security</button>
            </li>
        </ul>
        <div style="margin-top: 60px;">
            <div class="row">
                <div class="col-2 d-flex justify-content-center">
                    <img class="rounded-circle" src="/pexels-christina-morillo-1181690 1.png" style="height:130px; width:130px" />
                </div>
                <div class="col-10">
                    <form class="row">
                        <div class="col">                          
                            <label for="inputName" class="mb-2 ">Your Name</label>
                            <input type="text" name="name" class="form-control mb-3 text-555555 py-2" Value="Hossain Ahmed" required>
                            
                            <label for="inputEmail" class="mb-2">Email</label>
                            <input type="email" name="email" class="form-control mb-3 text-555555 py-2" Value="anisur@pubalibankbd" required>
                            
                            <label for="inputDOB" class="mb-2 ">Date of Birth</label>
                            <input type="date" name="dob" class="form-control mb-3 text-555555 py-2" value="05/06/1990" required>

                            <label for="inputAddress" class="mb-2">Permanent Address</label>
                            <input type="text" name="address" class="form-control mb-3 text-555555 py-2" value="5 Dilkusha, Dhaka" required>

                            <label for="inputPostalCode" class="mb-2">Postal Code</label>
                            <input type="number" name="postal" class="form-control mb-3 text-555555 py-2" value="1000" required>
                        </div>
                        <div class="col">
                            <label for="inputUserName" class="mb-2 ">User Name</label>
                            <input type="text" name="username" class="form-control mb-3 text-555555 py-2" value="ahmed4432" required>

                            <label for="inputPassword" class="mb-2">Password</label>
                            <input type="password" name="password" class="form-control mb-3 text-555555 py-2" value="password" required>

                            <label for="inputPresentAddress" class="mb-2 ">Present Address</label>
                            <input type="text" name="paddress" class="form-control mb-3 text-555555 py-2" value="5 Dilkusha, Dhaka" required>

                            <label for="inputCity" class="mb-2">City</label>
                            <input type="text" name="city" class="form-control mb-3 text-555555 py-2" value="Dhaka" required>

                            <label for="inputCountry" class="mb-2">Country</label>
                            <input type="text" name="country" class="form-control mb-3 text-555555 py-2" placeholder="Bangladesh" required>
                            
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-success py-2 w-25 text-white mt-2 rounded-2" type="submit">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
