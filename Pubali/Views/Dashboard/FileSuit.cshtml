
@{
    ViewData["Title"] = "Input File Suit";
}


<div class="position-absolute law w-100">
    <div class="bg-white rounded-2 p-2" style="margin-right: 20px; height: 79vh; overflow:auto;">
        <form class="row p-3">
            <label for="caseType" class="mb-2 ">Case Type/ Nature</label>
            <select class="rounded-2 border-secondary form-select mb-3 text-555555 py-2" id="caseType" onchange="moveToNext('caseType', 'caseNumber')" onfocus="openDropdown()" style="margin-left: 10px;">
                <option value="1">Case Type 1</option>
                <option value="2">Case Type 2</option>
                <option value="3">Case Type 3</option>
                <option value="4">Case Type 4</option>
            </select>

            <p class="p-3 text-center text-24 mb-3">
                File By Bank 0 Against Bank.
            </p>

            <div class="col">
                <label for="caseNumber" class="mb-2">Case Number</label>
                <input type="text" name="casename" class="form-control mb-3 text-555555 py-2" id="caseNumber" required>

                <label for="court" class="mb-2">Court</label>
                <input type="text" name="court" class="form-control mb-3 text-555555 py-2" id="court" required>

                <label for="suitvalue" class="mb-2">Suit Value</label>
                <input type="number" name="suitvalue" class="form-control mb-3 text-555555 py-2" id="suitvalue" required>

                <label for="loan" class="mb-2">Loan A/C</label>
                <div class="d-flex gap-1">
                    <input type="number" name="loan1" class="form-control mb-3 text-555555 py-2" id="loan1" oninput="checkInputLength(this, 'loan2', 4)" required>
                    <span class="mb-3">_</span>
                    <input type="number" name="loan2" class="form-control mb-3 text-555555 py-2" id="loan2" oninput="checkInputLength(this, 'loan3', 3)" required>
                    <span class="mb-3">_</span>
                    <input type="number" name="loan3" class="form-control mb-3 text-555555 py-2" id="loan3" oninput="checkInputLength(this, 'fillingDate', 6)" required>
                </div>

            </div>
            <div class="col">
                <label for="fillingDate" class="mb-2 ">Filling Date</label>
                <input type="date" name="fillingdate" class="form-control mb-3 text-555555 py-2" id="fillingDate" onkeypress="moveToNextInput(event, 'district')" required>

                <label for="district" class="mb-2 ">District</label>
                <select class="rounded-2 border-secondary form-select mb-3 text-555555 py-2" id="district" onchange="moveToNext('district', 'lawyer')">
                    <option>Dhaka</option>
                    <option>Mymensing</option>
                </select>

                <label for="lawyer" class="mb-2 ">Lawyer</label>
                <select class="rounded-2 border-secondary form-select mb-3 text-555555 py-2" id="lawyer" onchange="moveToNext('lawyer', 'lawofficer')">
                    <option>Name 1</option>
                    <option>Name 2</option>
                </select>

                <label for="lawofficer" class="mb-2 ">Law Officer</label>
                <select class="rounded-2 border-secondary form-select mb-3 text-555555 py-2" id="lawofficer" onchange="moveToNext('lawofficer', 'nextdate')">
                    <option>Name 1</option>
                    <option>Name 2</option>
                </select>

            </div>

            <div>
                <div class="">
                    <label for="nextDate" class="mb-2 ">Next Date</label>
                    <input type="date" name="nextdate" class="form-control mb-3 text-555555 py-2" id="nextdate" onkeypress="moveToNextInput(event, 'for')" required>
                
                </div>
                <div class="">
                    <label for="for" class="mb-2">For</label>
                    <input type="text" name="for" class="form-control mb-3 text-555555 py-2" id="for" onkeypress="moveToNextInput(event, 'name')" required>
                </div>
            </div>

            <div>
                <p class="p-3 text-center text-24 mb-2 mt-3">Security Information:</p>

                <div class="row" style="width:103%;">
                    <div class="col">
                        <label for="security" class="mb-2 ">Types Of Security</label>
                        <select disabled class="rounded-2 border-secondary form-select mb-3 text-555555 py-2">
                            <option value="1">Security Type 1</option>
                            <option value="2">Security Type 2</option>
                            <option value="3">Security Type 3</option>
                            <option value="4">Security Type 4</option>
                        </select>
                        <label for="valuation" class="mb-2">Valuation</label>
                        <input disabled type="text" name="valuation" class="form-control mb-3 text-555555 py-2" id="valuation" value="Valuation">
                    </div>
                    <div class="col">
                        <label for="area" class="mb-2">Area</label>
                        <input disabled type="text" name="area" class="form-control mb-3 text-555555 py-2" id="area" value="Motijheel">
                        
                        <label for="valuationyear" class="mb-2">Valuation Year</label>
                        <input disabled type="text" name="valuation" class="form-control mb-3 text-555555 py-2" id="valuation" value="2023">
                    </div>
                    <div class="col">
                        <label for="mouza" class="mb-2">Mouza</label>
                        <input disabled type="text" name="mouza" class="form-control mb-3 text-555555 py-2" id="mouza" value="Mirpur">

                        <label for="remarks" class="mb-2">Remarks</label>
                        <input disabled type="text" name="remarks" class="form-control mb-3 text-555555 py-2" id="remarks" value="Good">
                    </div>
                </div>

            </div>

            <div>
                <p class="p-3 text-center text-24 mb-2 mt-3">Party Information:</p>

                <div class="row" style="width:103%;">
                    <div class="col">
                        <label for="name" class="mb-2">Name</label>
                        <input type="text" name="name" class="form-control mb-3 text-555555 py-2" id="name" onkeypress="moveToNextInput(event, 'contact')" pattern="[A-Za-z ]+" title="Please enter only letters" required>
                        
                        <label for="contact" class="mb-2">Contact</label>
                        <input type="tel" name="contact" class="form-control mb-3 text-555555 py-2" id="contact" pattern="01[3-9][0-9]{8}" oninput="validateInput(this)" required inputmode="numeric">
                        
                        <label for="address" class="mb-2">Address</label>
                        <input type="text" name="address" class="form-control mb-3 text-555555 py-2" id="address" onkeypress="moveToNextInput(event, 'position')" required>
                    </div>
                    <div class="col">
                        <label for="position" class="mb-2 ">Position</label>
                        <select class="rounded-2 border-secondary form-select mb-3 text-555555 py-2" id="position" onchange="moveToNext('position', 'type')">
                            <option value="1">Position 1</option>
                            <option value="1">Position 2</option>
                            <option value="1">Position 3</option>
                            <option value="1">Position 4</option>
         
                        </select>

                        <label for="type" class="mb-2 ">Type</label>
                        <select class="rounded-2 border-secondary form-select mb-3 text-555555 py-2" id="type" onchange="moveToNext('type', 'involved')">
                            <option value="1">Type 1</option>
                            <option value="2">Type 2</option>
                            <option value="3">Type 3</option>
                            <option value="4">Type 4</option>
                        </select>

                        <label for="involved" class="mb-2 ">Other Customer Involved</label>
                        <select class="rounded-2 border-secondary form-select mb-3 text-555555 py-2" id="involved" onchange="moveToNext('involved', 'submit')">
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>

                    </div>
                </div>

            </div>

            <div class="d-flex justify-content-end">
                <input class="btn btn-success py-2 w-25 text-white mt-2 rounded-2" type="submit" id="submit" value="Save">
            </div>

        </form>
    </div>
</div>




<script>


    window.onload = function () {
        document.getElementById("caseType").focus();
    };

    function checkInputLength(input, nextInputId, length) {
        if (input.value.length === length) {
            document.getElementById(nextInputId).focus(); 
        }
    }

    function moveToNext(currentInputId, nextInputId) {
        var currentInput = document.getElementById(currentInputId);
        var nextInput = document.getElementById(nextInputId);

        if (nextInput.tagName === 'SELECT') {
            nextInput.focus();
        } else {
            currentInput.blur();
            nextInput.focus();
        }
    }

    function moveToNextInput(event, nextInputId) {
        var nextInput = document.getElementById(nextInputId);

        if (event.keyCode === 13) { 
            event.preventDefault(); 
            nextInput.focus();
        }
    }

    function validateInput(input) {
        var pattern = /^01[3-9][0-9]{8}$/;

        input.value = input.value.replace(/\D/g, '');

        if (pattern.test(input.value)) {
            input.nextElementSibling.focus();
        }
    }


</script>