@{
    ViewData["Title"] = "Case Search";
}

<div class="position-absolute law bg-white w-100 d-flex justify-content-center align-items-center" style="max-height:83vh">
    <div class="rounded-3" style="background-color: #EFEEEE; margin-top: 100px">
        <form class="p-4 d-flex flex-column gap-3">
            <div class="row d-flex align-items-center">
                <label class="col-md-5" style="text-align: right; color:rgba(69, 76, 82, 1);">Divison:</label>
                <select class="col-md-7 px-2 py-1 rounded-3 border-1">
                    <option style="color:rgba(69, 76, 82, 1);">High Court Division</option>
                </select>
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-5" style="text-align: right; color:rgba(69, 76, 82, 1);">Case Category:</label>
                <select class="col-md-7 px-2 py-1 rounded-3 border-1">
                    <option style="color:rgba(69, 76, 82, 1);">- Select -</option>
                </select>
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-5" style="text-align: right; color:rgba(69, 76, 82, 1);">Case Type:</label>
                <select class="col-md-7 px-2 py-1 rounded-3 border-1">
                    <option style="color:rgba(69, 76, 82, 1);">- Select -</option>
                </select>
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-5" style="text-align: right; color:rgba(69, 76, 82, 1);">Case Number:</label>
                <input class="col-md-7 px-2 py-1 rounded-3 border-1" type="number" placeholder="Input Care Number" />
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-5" style="text-align: right; color:rgba(69, 76, 82, 1);">Year:</label>
                <input class="col-md-7 px-2 py-1 rounded-3 border-1" type="number" placeholder="Input Year" />
            </div>
            <div>
                <input type="submit" value="Search" class="btn text-white d-block px-3" style="background-color: #4442E0; margin:auto;"/>
            </div>
        </form>
    </div>
    
</div>
