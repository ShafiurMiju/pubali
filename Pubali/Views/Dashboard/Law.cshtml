@{
    ViewData["Title"] = "Neccessary Low";
}

<div class ="position-absolute law bg-white w-100">
    <div class="d-flex justify-content-between align-items-center mt-2">
        <div>
            <h1 style="font-size:28px; color: rgba(37, 37, 37, 1);">
                Necessary Laws
            </h1>
        </div>
        <div>
            <div class="d-flex gap-1" style="margin-right: 10px;">
                <form method="post" enctype="multipart/form-data" class="d-flex gap-2">
                    <select class="rounded-2 border-secondary form-select" style="width:100px !important; padding: 6px 3px !important">
                        <option>Any</option>
                        <option>Any</option>
                        <option>Any</option>
                        <option>Any</option>
                        <option>Any</option>
                    </select>
                    <div class="d-flex align-items-center ">
                        <input type="search" name="search" class="rounded-start px-2 border-1" style="font-size:14px; padding: 7px 0; border-right: 0 !important; " placeholder="Search Document" />
                        <button type="submit" class=" px-2 rounded-end" style="border: 0; background-color:#CF914B; padding:6.5px 3px;">
                            <i class="fa-solid fa-magnifying-glass" ></i>
                        </button>
                    </div>

                </form>
                <form asp-action="Upload" method="post" enctype="multipart/form-data" class="d-flex gap-1">
                    <input class="form-control" type="file"name="file" style="width:200px !important; padding: 6px 5px !important" />
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
        </div>
    </div>
    <div>
        <div class="mt-4" style="max-height: 69vh; overflow: auto">
            <table class="table" style="font-size: 12px">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">NAME</th>
                        <th scope="col">UPLOADED BY</th>
                        <th scope="col">UPDATED</th>
                        <th scope="col">TAG</th>
                        <th scope="col">SIZE</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var document in Model)
                    {
                        <tr>
                            <td>@document.FileName</td>
                            <td>@document.UploadedBy</td>
                            <td>@document.UploadDate.ToString("dd/MM/yyyy")</td>
                            <td class="d-flex gap-1" style="padding-bottom: 10px;">
                                <span class="rounded text-white px-2 cursor-pointer" style="background: rgba(39, 45, 105, 1);">Law</span>
                                <span class="rounded text-white px-2 cursor-pointer" style="background: rgba(39, 45, 105, 1);">Cases</span>
                                <span class="rounded text-white px-2 cursor-pointer" style="background: rgba(39, 45, 105, 1);">Development</span>
                            </td>
                            <td>@document.FileSize KB</td>
                            <td class ="cursor-pointer">
                                <form method="get" action="@Url.Action("Download", "Dashboard")">
                                    <input type="hidden" name="id" value="@document.Id" />
                                    <button style="border: none; background-color: transparent;" type="submit"><i class="fa-solid fa-download"></i></button>
                                </form>
                            </td>
                        </tr>
                    }                  
                </tbody>
            </table>
        </div>
    </div>
</div>
